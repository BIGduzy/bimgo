{
    "extends": "eslint-config-airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "legacyDecorators": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "id-length": 0,
        "import/default": 0,
        "import/named": 0,
        "import/namespace": 0,
        "import/no-duplicates": 0,
        "import/no-named-default": 0,
        "import/no-unresolved": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-alert": 0,
        "no-console": 1,
        "react/jsx-filename-extension": 0,
        "react/jsx-indent-props": [2, 4],
        "react/jsx-indent": [2, 4],
        "react/jsx-no-bind": 0,
        "react/no-array-index-key": 1,
        "react/no-multi-comp": 0,
        "react/prefer-stateless-function": 0,
        "object-curly-newline": 0,
        "jsx-a11y/no-static-element-interactions": 0, // Enable for a more user friendly site
        "jsx-a11y/click-events-have-key-events": 0,  // Enable for a more user friendly site
    },
    "plugins": [
        "react",
        "import"
    ],
    "settings": {
        "import/parser": "babel-eslint",
        "import/resolve": {
            "moduleDirectory": ["node_modules", "src"]
        }
    },
    "globals": {
        "React": true
    }
}
